{
	"printWidth": 80,
	"trailingComma": "all",
	"singleAttributePerLine": false,
	"htmlWhitespaceSensitivity": "strict",
	"bracketSameLine": true,
	"useTabs": true,
	"tabWidth": 4,
	"bracketSpacing": true,
	"plugins": ["prettier-plugin-astro"],
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		},
		{
			"files": ".github/workflows/*.yml",
			"options": { "parser": "yaml" }
		},
		{
			"files": ".prettierrc",
			"options": { "parser": "json" }
		}
	]
}
