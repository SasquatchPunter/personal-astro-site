---
import Layout from "@src/layouts/Layout.astro";
import NavMenu from "@src/components/features/nav-menu/NavMenu.astro";
import LandingRender from "@src/components/features/renders/LandingRender.astro";
---

<Layout>
	<NavMenu />
	<header>
		<LandingRender />
	</header>
</Layout>

<style>
	header {
		position: relative;
		width: 100%;
		height: 100dvh;
		height: var(--vh, 100vh);

		display: flex;
		flex-direction: column;
		justify-content: start;
		align-items: start;

		color: #3f4a3f;
	}
</style>
