---
import type { Metadata } from "@src/types";

import Noise from "@src/components/Noise.astro";
import Layout from "@src/layouts/Layout.astro";
import ProgressNotification from "@src/components/ProgressNotification.astro";
import NavBar from "@src/components/NavBar.astro";
import { NavMenu } from "@src/components/features/nav-menu";

const title = "Demos";
const metadata: Metadata = {
	description:
		"I like to tinker with web technologies. Here are some demo projects I decided were just good enough to show off.",
};
---

<Layout title={title} metadata={metadata}>
	<Noise />
	<ProgressNotification />
	<NavMenu />
	<NavBar />
</Layout>
