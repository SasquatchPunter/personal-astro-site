---
import type { HttpEquivMetadata, BasicMetadata } from "@src/types";

type Props = HttpEquivMetadata & BasicMetadata;

const {
	abstract,
	author,
	description,
	keywords,
	robots,
	contentType,
	refresh,
} = Astro.props;
---

{abstract ? <meta name="abstract" content={abstract} /> : null}
{author ? <meta name="author" content={author} /> : null}
{description ? <meta name="description" content={description} /> : null}
{keywords ? <meta name="keywords" content={keywords} /> : null}
{robots ? <meta name="robots" content={robots} /> : null}

{contentType ? <meta http-equiv="content-type" content={contentType} /> : null}
{refresh ? <meta http-equiv="refresh" content={refresh} /> : null}
