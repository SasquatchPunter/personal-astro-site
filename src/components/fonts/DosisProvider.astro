---
type Props = {
	preload?: boolean;
};

const { preload } = Astro.props;
---

{
	preload ? (
		<>
			<link
				rel="preload"
				href="/fonts/Dosis/Dosis-VariableFont.ttf"
				as="font"
				type="font/ttf"
				crossorigin
			/>
			<link
				rel="preload"
				href="/fonts/Dosis/Dosis-Light.ttf"
				as="font"
				type="font/ttf"
				crossorigin
			/>
			<link
				rel="preload"
				href="/fonts/Dosis/Dosis-Regular.ttf"
				as="font"
				type="font/ttf"
				crossorigin
			/>
			<link
				rel="preload"
				href="/fonts/Dosis/Dosis-SemiBold.ttf"
				as="font"
				type="font/ttf"
				crossorigin
			/>
		</>
	) : null
}

<style is:global>
	@font-face {
		font-family: "Dosis VF";
		src: url("/fonts/Dosis/Dosis-VariableFont.ttf") format("truetype");
	}
	@font-face {
		font-family: "Dosis";
		src: url("/fonts/Dosis/Dosis-Light.ttf") format("truetype");
		font-weight: 100;
	}
	@font-face {
		font-family: "Dosis";
		src: url("/fonts/Dosis/Dosis-Regular.ttf") format("truetype");
		font-weight: 400;
	}
	@font-face {
		font-family: "Dosis";
		src: url("/fonts/Dosis/Dosis-SemiBold.ttf") format("truetype");
		font-weight: 600;
	}
</style>
