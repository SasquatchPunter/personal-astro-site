---
type Props = {
	preload?: boolean;
};

const { preload } = Astro.props;
---

{
	preload ? (
		<link
			rel="preload"
			href="/fonts/Boldonse/Boldonse-Regular.ttf"
			as="font"
			type="font/ttf"
			crossorigin
		/>
	) : null
}

<style is:global>
	@font-face {
		font-family: Boldonse;
		src: url("/fonts/Boldonse/Boldonse-Regular.ttf") format("truetype");
		font-weight: normal;
	}
</style>
