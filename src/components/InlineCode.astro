---
export interface Props {
	children: any | any[];
	as?: "span" | "code";
}

const { as: Tag = "code" } = Astro.props;
---

<Tag><slot /></Tag><style>
	code,
	span {
		background-image: linear-gradient(to top, #000a, #0004);
		color: theme(colors.base.dark.text.code);
		border-radius: 4px;
		border: #888 1px solid;
		padding: 0 1ch;
	}
</style>
